<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Painel Administrativo</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

  <!-- Layout do Painel Administrativo -->
  <div class="flex">

    <!-- Menu Lateral -->
    <div class="w-64 h-screen bg-gray-800 text-white p-5">
      <h2 class="text-2xl font-bold text-center mb-8">Admin Panel</h2>
      <nav>
        <ul>
          <li class="mb-4"><a href="#" class="hover:bg-gray-700 px-4 py-2 block rounded">Dashboard</a></li>
          <li class="mb-4"><a href="#" class="hover:bg-gray-700 px-4 py-2 block rounded">Produtos</a></li>
          <li class="mb-4"><a href="#" class="hover:bg-gray-700 px-4 py-2 block rounded">Pedidos</a></li>
          <li class="mb-4"><a href="#" class="hover:bg-gray-700 px-4 py-2 block rounded">Usuários</a></li>
          <li class="mb-4"><a href="#" class="hover:bg-gray-700 px-4 py-2 block rounded">Relatórios</a></li>
          <li><a href="#" class="hover:bg-gray-700 px-4 py-2 block rounded">Sair</a></li>
        </ul>
      </nav>
    </div>

    <!-- Conteúdo Principal -->
    <div class="flex-1 p-10">

      <!-- Cabeçalho -->
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Adicionar Novo Produto</h1>
        <button class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700">Novo Produto</button>
      </div>

      <!-- Formulário para Adicionar Produto -->
      <div class="bg-white p-6 rounded-lg shadow-lg">
        <form action="/admin/products" method="POST">
          <div class="mb-4">
            <label for="productName" class="block text-gray-700 font-semibold mb-2">Nome do Produto</label>
            <input type="text" id="productName" name="productName" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>

          <div class="mb-4">
            <label for="productPrice" class="block text-gray-700 font-semibold mb-2">Preço</label>
            <input type="text" id="productPrice" name="productPrice" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>

          <div class="mb-4">
            <label for="productDescription" class="block text-gray-700 font-semibold mb-2">Descrição</label>
            <textarea id="productDescription" name="productDescription" rows="4" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
          </div>

          <div class="mb-4">
            <label for="productImage" class="block text-gray-700 font-semibold mb-2">Imagem do Produto (URL)</label>
            <input type="text" id="productImage" name="productImage" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>

          <div class="flex justify-end">
            <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700">Adicionar Produto</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</body>
</html>
